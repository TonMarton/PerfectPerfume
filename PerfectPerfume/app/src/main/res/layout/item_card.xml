<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_margin="16dp"
    android:background="@drawable/item_card_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/perfume_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/perfume1_flat"
            android:scaleType="centerInside"
            android:background="@drawable/item_card_bg"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/perfume_name_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/perfume_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Name of the perfume blaty"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:textSize="28sp"
                android:textAlignment="viewStart"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/perfume_sex_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="For Her"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:textSize="32sp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/perfume_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|end"
                android:text="â‚¬14.5"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:textSize="32sp"
                android:paddingRight="16dp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>